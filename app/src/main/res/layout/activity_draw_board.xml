<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="horizontal">

    <include
        layout="@layout/activity_draw_board_left_bar"
        android:layout_width="50dp"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@android:color/black"
        android:gravity="center_vertical">

        <!-- 绘画板容器 -->

        <ViewFlipper
            android:id="@+id/drawBoardContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent" />
        <!-- 音乐插入窗口 -->

        <TextView
            android:id="@+id/viewFlipperOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:visibility="gone" />
        <!-- 视频播放控制器 -->

        <com.speaktool.ui.layouts.VideoPlayControllerView
            android:id="@+id/layoutVideoController"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/drawBoardContainer"
            android:layout_centerHorizontal="true"
            android:visibility="gone" />
    </RelativeLayout>

    <include
        layout="@layout/activity_draw_board_right_bar"
        android:layout_width="50dp"
        android:layout_height="match_parent" />

</LinearLayout>