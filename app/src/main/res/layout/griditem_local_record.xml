<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_rectangle_white"
    android:gravity="center_horizontal"
    android:paddingBottom="5dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tvRecordTitle"
        android:layout_margin="5dp"
        android:background="@drawable/shape_rectangle_darker_gray"
        android:gravity="center_horizontal" >

        <ImageView
            android:id="@+id/ivThumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_margin="0.5dp"
            android:contentDescription="@null"
            android:scaleType="fitCenter"
            android:src="#abcdef" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tvRecordTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:ellipsize="end"
        android:maxEms="15"
        android:singleLine="true"
        android:text="课程记录名称"
        android:textColor="@android:color/black"
        android:textSize="14sp" />

    <RelativeLayout
        android:id="@+id/uploadProgressLay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:visibility="gone" >

        <ProgressBar
            android:id="@+id/progressBarUploadProgress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/closeUpload"
            android:max="100" />

        <ImageView
            android:id="@+id/closeUpload"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/selector_wrong_icon" />
    </RelativeLayout>

</RelativeLayout>