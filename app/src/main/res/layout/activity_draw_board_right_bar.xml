<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_right_bar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/draw_right_bar_bg"
    android:gravity="center"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/ivRecord"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:contentDescription="@null"
        android:padding="5dp"
        android:src="@drawable/draw_recording_normal" />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:gravity="center"
        android:text="00:00"
        android:textColor="@android:color/white" />

    <ImageView
        android:id="@+id/ivReRecord"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:contentDescription="@null"
        android:padding="5dp"
        android:src="@drawable/selector_draw_bottom_rerecord" />

    <ImageView
        android:id="@+id/ivPrePage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:contentDescription="@null"
        android:padding="5dp"
        android:src="@drawable/ic_arrow_top" />

    <TextView
        android:id="@+id/tvPageInfo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:gravity="center"
        android:text="1/5"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/ivNextPage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:contentDescription="@null"
        android:padding="5dp"
        android:src="@drawable/ic_arrow_bottom" />

    <ImageView
        android:id="@+id/ivNewPage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:contentDescription="@null"
        android:padding="5dp"
        android:src="@drawable/selector_draw_bottom_newcopypage" />

    <ImageView
        android:id="@+id/ivPreview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:contentDescription="@null"
        android:padding="5dp"
        android:src="@drawable/selector_draw_bottom_preview" />

    <TextView
        android:id="@+id/tvFinish"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="完成"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

</LinearLayout>