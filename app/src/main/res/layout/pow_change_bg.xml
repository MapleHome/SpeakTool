<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:spktl="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="210dp"
        android:background="@drawable/shape_pow_bg"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@android:color/white"
            android:gravity="center"
            android:padding="5dp"
            android:text="选择背景"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:src="#aacccccc" />

        <com.speaktool.view.layouts.ItemViewChooseBackgroundPop
            android:id="@+id/itemWhiteBg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_photodir_list"
            spktl:itemSelectBg_icon="@drawable/draw_white_bg_bt"
            spktl:itemSelectBg_isCheck="false"
            spktl:itemSelectBg_note="白色背景" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_gravity="right"
            android:layout_marginLeft="65dp"
            android:src="#5acccccc" />

        <com.speaktool.view.layouts.ItemViewChooseBackgroundPop
            android:id="@+id/itemListBg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_photodir_list"
            spktl:itemSelectBg_icon="@drawable/line_bg_bt"
            spktl:itemSelectBg_isCheck="false"
            spktl:itemSelectBg_note="线条背景" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_gravity="right"
            android:layout_marginLeft="65dp"
            android:src="#5acccccc" />

        <com.speaktool.view.layouts.ItemViewChooseBackgroundPop
            android:id="@+id/itemGridBg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_photodir_list"
            spktl:itemSelectBg_icon="@drawable/grid_bg_bt"
            spktl:itemSelectBg_isCheck="false"
            spktl:itemSelectBg_note="网格背景" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_gravity="right"
            android:layout_marginLeft="65dp"
            android:src="#5acccccc" />

        <com.speaktool.view.layouts.ItemViewChooseBackgroundPop
            android:id="@+id/itemCoordinateBg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_photodir_list"
            spktl:itemSelectBg_icon="@drawable/draw_coordinate_bg_bt"
            spktl:itemSelectBg_isCheck="false"
            spktl:itemSelectBg_note="坐标背景" />
    </LinearLayout>

</LinearLayout>