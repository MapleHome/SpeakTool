<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 顶部-圆角-带边 -->
    <!-- 默认状态 -->
    <item android:state_pressed="false">
        <shape android:shape="rectangle">

            <!-- 填充颜色 -->
            <solid android:color="@color/dialog_bg" />
            <!-- 线的宽度，颜色灰色 -->
            <stroke android:width="0.5dip" android:color="@color/dialog_line" />
            <!-- 矩形的圆角半径 -->
            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="0dp" android:topLeftRadius="@dimen/jiaodu" android:topRightRadius="@dimen/jiaodu" />
        </shape>
    </item>

    <!-- 选择状态 -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">

            <!-- 填充颜色 -->
            <solid android:color="@color/dialog_sel_bg" />
            <!-- 线的宽度，颜色灰色 -->
            <stroke android:width="0.5dip" android:color="@color/dialog_line" />
            <!-- 矩形的圆角半径 -->
            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="0dp" android:topLeftRadius="@dimen/jiaodu" android:topRightRadius="@dimen/jiaodu" />
        </shape>
    </item>

</selector>