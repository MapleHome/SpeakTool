<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 圆角-带边-变色矩形 -->
    <!-- 默认状态 -->
    <item android:state_pressed="false"><shape>

            <!-- 填充颜色 -->
            <solid android:color="@color/dialog_bg" />
            <!-- 线的宽度，颜色灰色 -->
            <stroke android:width="0.7dip" android:color="@color/dialog_line" />
            <!-- 矩形的圆角半径 -->
            <corners android:radius="@dimen/jiaodu" />
        </shape></item>

    <!-- 选择状态 -->
    <item android:state_pressed="true"><shape>

            <!-- 填充颜色 -->
            <solid android:color="@color/dialog_sel_bg" />
            <!-- 线的宽度，颜色灰色 -->
            <stroke android:width="0.7dip" android:color="@color/dialog_line" />
            <!-- 矩形的圆角半径 -->
            <corners android:radius="@dimen/jiaodu" />
        </shape></item>

</selector>